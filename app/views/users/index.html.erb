<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Hash password</th>
    <th>Email</th>
    <th>Sex</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.username %></td>
    <td><%=h user.hash_password %></td>
    <td><%=h user.email %></td>
    <td><%=h user.sex %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>